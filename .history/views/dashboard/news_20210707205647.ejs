<%- include('header') %>
    <section name="contacts">
        <div class="head">
            <h1>Kontaktanfragen
                <div class="right">
                    <p><%- contacts.length %></p>
                    <a href="/news/new" class="download">
                        <img src="/images/Add.svg" alt="">
                    </a>
                </div>
            </h1>
            <h4>Alle News auf einen Blick</h4>
        </div>


        <div class="container">
            <div class="inner-container">
                <div class="left fade-out">
    
                </div>
                <div class="right fade-out">
    
                </div>

                <div class="cards">
                    <% news.forEach(function(article) { %>
                    <div class="card">
                        <div class="card-top">
                            <div class="information">
                                <h3></h3>
                            </div>
                            <div class="information">
                                <input type="text" value="<%- article.title %>">
                            </div>
                            <div class="information">
                                <input type="text" value="<%- article.image %>">
                            </div>
                            <div class="information">
                                <select name="theme" id="">
                                    <option value="dark">Dark</option>
                                    <option value="light">Light</option>
                                </select>
                            </div>
                            <div class="information">
                                <textarea name="" id="" cols="30" rows="10">
                                    <%- article.text %>
                                </textarea>
                            </div>
                        </div>
                        <div class="card-answer">
                            <div class="head">
                                <h2>Antwort</h2>
                                <i class="fas fa-chevron-up" onclick="removeContact(this);"></i>
                            </div>
                            <form action="/sendanswer" method="POST">
                                <div class="input-field">
                                    <label for="subject">Betreff:</label>
                                    <input type="text" name="subject">
                                </div>
                                <div class="input-field">
                                    <label for="message">Nachricht:</label>
                                    <textarea name="message" id="" cols="30" rows="10"></textarea>
                                </div>
                                <button>Absenden</button>
                            </form>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </section>
</body>
<script src="/scripts/contact.js"></script>
</html>